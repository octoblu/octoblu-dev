FROM node:5
MAINTAINER Octoblu, Inc. <docker@octoblu.com>

EXPOSE 80

RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

COPY package.json /usr/src/app/
RUN ["npm", "install", "--production", "--silent"]
COPY . /usr/src/app/

ADD http://meshblu.octoblu.dev/publickey /usr/src/app/public-key.json

CMD [ "node", "command.js" ]
